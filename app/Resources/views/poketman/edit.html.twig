{% extends 'layout.html.twig' %}

{% block content %}
    <h5>Poketman edit</h5>
    <a class="btn waves-effect waves-light" href="{{ path('poketman_index') }}">
        Back<i class="large material-icons">reply</i>
    </a>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <div class="nav-wrapper">
        <ul>
            <li>
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
                <a href="{{ path('poketman_delete', { 'id': poketman.id , 'token': csrf_token('poketman_delete')}) }}">
                    <button class="btn waves-effect waves-light red"><span>DELETE</span><i class="large material-icons">delete</i>
                    </button>
                </a>
            </li>
        </ul>
    </div>
    {{ form_end(edit_form) }}
